{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "app/api/v2/generate/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/generate-articles",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/generate-articles",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/generate-articles",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/check-milestones",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/maintenance-reminder",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/seo-submit",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/backlink-outreach",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/email-nurturing",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/pinterest-post",
      "schedule": "0 14 * * 1,3,5"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/blog/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
